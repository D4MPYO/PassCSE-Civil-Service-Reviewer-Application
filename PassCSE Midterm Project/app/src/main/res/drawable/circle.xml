<?xml version="1.0" encoding="utf-8"?>
<shape
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">  <!-- Use "oval" to make sure it can act as a circle -->

    <!-- Transparent background -->
    <solid android:color="@color/transp" />

    <!-- Stroke color (you can customize this if needed) -->
    <stroke
        android:width="2dp"
        android:color="@color/transp" /> <!-- Change this to the stroke color you want -->

    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp" />
</shape>
